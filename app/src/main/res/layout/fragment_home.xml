<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/orderTabLayoutHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pagerHome"
        android:layout_width="match_parent"
        android:layout_height="777dp"
        app:layout_constraintTop_toBottomOf="@id/orderTabLayoutHome"
        android:layout_below="@id/orderTabLayoutHome">


    </androidx.viewpager2.widget.ViewPager2>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/neworderbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:elevation="15dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_marginEnd="15dp"
        android:focusable="true" />


</RelativeLayout>