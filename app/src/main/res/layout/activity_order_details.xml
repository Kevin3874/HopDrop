<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".OrderProgress">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_card"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:elevation="8dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="horizontal"
                android:paddingRight="15dp">
                <TextView
                    android:id="@+id/your_courrier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="Customer"
                    android:textSize="20sp"
                    android:padding="9dp"/>
                <ImageView
                    android:id="@+id/customer_profile_image"
                    android:layout_centerHorizontal="true"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/your_courrier"
                    android:src="@drawable/user_profile_avatar_svgrepo_com"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:id="@+id/customer_name_accept"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/customer_profile_image"
                    android:layout_below="@id/your_courrier"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="@string/name"
                    android:textSize="18dp"
                    android:padding="9dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/details"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:layout_gravity="center"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            android:layout_below="@id/image_card">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="horizontal"
                android:paddingRight="15dp">
                <TextView
                    android:id="@+id/detail_title_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="Details"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/date_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_title_delivery"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="date"
                    android:drawableStart="@drawable/calendar_icon"
                    android:textSize="18sp"
                    android:padding="2dp"/>
                <TextView
                    android:id="@+id/time_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_delivery"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="time"
                    android:textSize="18sp"
                    android:padding="2dp"
                    android:drawableStart="@drawable/clock_icon" />
                <TextView
                    android:id="@+id/fee_accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_delivery"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="Fee:"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/pickup_location_accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fee_accept"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="Pickup location"
                    android:textSize="18sp"
                    android:padding="2dp"/>
                <TextView
                    android:id="@+id/destination_accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pickup_location_accept"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="Delivery location"
                    android:textSize="18sp"
                    android:padding="2dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/additional_details_card"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/details"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/additional_details_label_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="Additional Details"
                    android:textSize="18sp"
                    android:padding="2dp"/>
                <TextView
                    android:id="@+id/additional_details_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/additional_details_label_confirm"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:textSize="18sp"
                    android:padding="2dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/accept_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/additional_details_card"
            android:layout_marginTop="30dp"
            android:text="Accept"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
</ScrollView>
