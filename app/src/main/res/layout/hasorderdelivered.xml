<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hasorderdelivered"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has your order been delivered?"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/yes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewQuestion"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="4dp"
        android:text="Yes" />

    <Button
        android:id="@+id/no_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewQuestion"
        android:layout_alignBaseline="@+id/yes_button"
        android:layout_alignLeft="@+id/yes_button"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/yes_button"
        android:text="No" />

</RelativeLayout>